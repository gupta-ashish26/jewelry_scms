<%- include("../partials/header", { title: "Add Material" }) %>

<style>
    .center-div {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }
    
    .custom-card {
      width: 350px;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }

    .custom-card h2 {
      font-size: 3rem;
      text-align: center;
      margin-bottom: 20px;
    }

    .custom-card .form-control {
      font-size: 2rem;
      padding: 0.5rem 1rem;
      text-transform: none;
    }

    .custom {
        font-size: 2rem;
    }

</style>

<br><br><br><br>
<section class="main-content">
    <div class="center-div">
        <form action="/admin/addMaterial" class="custom-card bg-light" method="POST">
            <h2>Add Material</h2>
            <div class="form-group">
                <label class="custom" for="name">Material Name</label>
                <input type="text" id="name" name="name" class="form-control" required>
            </div>
            <div class="form-group">
                <label class="custom" for="type">Type</label>
                <input type="text" id="type" name="type" class="form-control" required>
            </div>
            <div class="form-group">
                <label class="custom" for="description">Description</label>
                <textarea id="description" name="description" class="form-control" rows="3"></textarea>
            </div>
            <div class="form-group">
                <label class="custom" for="category_id">Category ID</label>
                <input type="number" id="category_id" name="category_id" class="form-control" required>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Add Material</button>
        </form>
    </div>
    <!-- Table for Existing Categories -->
    <div class="center-div" style="margin-top: 20px;">
        <h3>Existing Categories</h3>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Category ID</th>
                    <th>Category Name</th>
                </tr>
            </thead>
            <tbody>
                <% categories.forEach(function(category) { %>
                    <tr>
                        <td><%= category.category_id %></td>
                        <td><%= category.category_name %></td> <!-- Adjust based on your category table structure -->
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</section>

<%- include("../partials/footer") %>

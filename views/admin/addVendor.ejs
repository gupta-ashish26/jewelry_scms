<%- include("../partials/header", { title: "Add Vendor" }) %>

<style>
    .center-div {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }
    
    .custom-card {
      width: 350px;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }

    .custom-card h2 {
      font-size: 3rem;
      text-align: center;
      margin-bottom: 20px;
    }

    .custom-card .form-control {
      font-size: 2rem;
      padding: 0.5rem 1rem;
      text-transform: none;
    }

    .custom {
        font-size: 2rem;
    }

</style>

<br><br><br><br>
<section class="main-content">
    <div class="center-div">
        <form action="/admin/addVendor" class="custom-card bg-light" method="POST">
            <h2>Add Vendor</h2>
            <div class="form-group">
                <label class="custom" for="name">Vendor Name</label>
                <input type="text" id="name" name="name" class="form-control" required>
            </div>
            <div class="form-group">
                <label class="custom" for="city">City</label>
                <input type="text" id="city" name="city" class="form-control" required>
            </div>
            <div class="form-group">
                <label class="custom" for="state">State</label>
                <input type="text" id="state" name="state" class="form-control" required>
            </div>
            <div class="form-group">
                <label class="custom" for="zip_code">Zip Code</label>
                <input type="text" id="zip_code" name="zip_code" class="form-control" required>
            </div>
            <div class="form-group">
                <label class="custom" for="contact_info">Contact Info</label>
                <input type="text" id="contact_info" name="contact_info" class="form-control" required>
            </div>
            <div class="form-group">
                <label class="custom" for="overall_rating">Overall Rating (1-5)</label>
                <input type="number" id="overall_rating" name="overall_rating" class="form-control" min="1" max="5" required>
            </div>
            <div class="form-group">
                <label class="custom" for="feedback">Feedback</label>
                <textarea id="feedback" name="feedback" class="form-control" rows="3"></textarea>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Add Vendor</button>
        </form>
    </div>
</section>

<%- include("../partials/footer") %>
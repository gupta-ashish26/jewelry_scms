<%- include("../partials/header", { title: "Vendors" }) %>

<br><br><br><br>
<section class="main-content">
    <div class="container my-5">
        <!-- Search Form -->
        <form class="row g-3 p-4 border rounded bg-light shadow-sm">
            <h2 class="mb-3">Search Vendors</h2>

            <div class="col-md-6">
                <label for="name" class="form-label">Name</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Vendor Name">
            </div>
            <div class="col-md-6">
                <label for="city" class="form-label">City</label>
                <input type="text" class="form-control" id="city" name="city" placeholder="City">
            </div>
            <div class="col-md-6">
                <label for="state" class="form-label">State</label>
                <input type="text" class="form-control" id="state" name="state" placeholder="State">
            </div>
            <div class="col-md-6">
                <label for="rating" class="form-label">Minimum Rating</label>
                <input type="number" class="form-control" id="rating" name="rating" min="1" max="5" placeholder="1-5">
            </div>

            <div class="col-12 text-center">
                <button type="submit" class="btn btn-primary mt-3">Search</button>
            </div>
        </form>
    </div>

    <!-- Results Section -->
    <div class="container my-5">
        <h3 class="mb-4">Search Results</h3>
        <div class="row">
            <% vendors.forEach(function(vendor) { %>
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title"><%= vendor.name %></h5>
                            <p class="card-text">
                                <strong>Location:</strong> <%= vendor.city %>, <%= vendor.state %> <br>
                                <strong>Rating:</strong> <%= vendor.overall_rating %> / 5 <br>
                                <strong>Contact:</strong> <%= vendor.contact_info %>
                            </p>
                        </div>
                        <div class="card-footer">
                            <small class="text-muted">Feedback: <%= vendor.feedback %></small>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</section>

<%- include("../partials/footer") %>